<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <ImageView
        android:id="@+id/iv_main_bg"
        android:layout_width="315dp"
        android:layout_height="558dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/bg_main" />

    <ImageView
        android:id="@+id/iv_main_left"
        android:layout_width="43dp"
        android:layout_height="200dp"
        android:layout_alignStart="@id/iv_main_bg"
        android:layout_alignLeft="@id/iv_main_bg"
        android:layout_alignBottom="@id/iv_main_bg"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="106dp"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/btn_main_left" />

    <ImageView
        android:id="@+id/iv_main_right"
        android:layout_width="51dp"
        android:layout_height="58dp"
        android:layout_alignEnd="@id/iv_main_bg"
        android:layout_alignRight="@id/iv_main_bg"
        android:layout_alignTop="@id/iv_main_bg"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="106dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/btn_main_right" />


</RelativeLayout>