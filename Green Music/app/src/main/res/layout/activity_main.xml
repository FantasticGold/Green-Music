<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default">

    <ImageView
        android:id="@+id/iv_main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bg_main" />

    <ImageView
        android:id="@+id/iv_main_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/iv_main_bg"
        android:layout_alignLeft="@id/iv_main_bg"
        android:layout_alignBottom="@id/iv_main_bg"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_main_left" />

    <ImageView
        android:id="@+id/iv_main_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/iv_main_bg"
        android:layout_alignRight="@id/iv_main_bg"
        android:layout_alignTop="@id/iv_main_bg"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_main_right" />


</RelativeLayout>