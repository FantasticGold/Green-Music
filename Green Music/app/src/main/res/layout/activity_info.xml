<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default">

    <ImageView
        android:id="@+id/iv_start_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/iv_blank_bg" />

    <ImageView
        android:id="@+id/iv_start_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/iv_start_bg"
        android:layout_alignTop="@id/iv_start_bg"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_info_start" />

    <ImageView
        android:id="@+id/iv_start_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/iv_start_bg"
        android:layout_alignTop="@id/iv_start_bg"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_info_music" />

    <ImageView
        android:id="@+id/iv_info_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/iv_start_bg"
        android:layout_alignBottom="@id/iv_start_bg"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_info_back" />

</RelativeLayout>