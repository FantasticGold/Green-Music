<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_music_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/iv_blank_bg"/>

    <ImageView
        android:id="@+id/iv_music_jump"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/gif_music_bg"
        android:layout_alignBottom="@id/gif_music_bg"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_music_jump" />

    <ImageView
        android:id="@+id/iv_music_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/gif_music_bg"
        android:layout_alignBottom="@id/gif_music_bg"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_music_back" />

</RelativeLayout>